doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/css/style.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
  body
    .navbar.navbar-default: .container-fluid
      .navbar-header
        a.navbar-brand(href='/') Blog Application
      ul.nav.navbar-nav.navbar-right
        if user
          li.dropdown
            a.dropdown-toggle(href='#' data-toggle='dropdown')= user.name
              span.caret
            ul.dropdown-menu
              li: a(href=`/user/${user.user_id}`) Manage personal details
              li: a(href=`/user/${user.user_id}/subscription`) Manage subscriptions
              if user.is_author
                li: a(href=`/author/${user.user_id}`) View my articles
                li: a(href='/article/new') Publish an article
              if user.is_admin
                li: a(href='/user') Manage users
                li: a(href='/tag') Manage tags
              li: a(href='/logout') Log out
        else
          li: a(href='/login') Log in
          li: a(href='/user/new') Sign up
    .container.col-md-8
      .page-header
        h1= title
      block content
    .container.col-md-2
      block sidebar
