extends layout

block content
  form#create-article(method='post')
    .form-group
      label(for='create-article-title') Title:
      input#create-article-title.form-control(type='text', name='title', placeholder='Article Title')
    .form-group
      label(for='create-article-tags') Tags:
      input#create-article-tags.form-control(type='text', name='tags', placeholder='Article Tags')
    .form-group
      label(for='create-article-content') Content:
      textarea#create-article-content.form-control(name='content', placeholder='Article Content')
    button.btn(type='submit') Create Article
